<div class="feed" id="feed_<%= feed.id %>">
  <div class="header">
    <div class="title"><%= feed.title %></div>
    <div class="subtitle">
      <span class="last_updated"><%= time_ago_in_words(feed.updated_at) %> ago | </span>
      <span class="refresh">
        <%# this link will be handled jQuery / javascript call %>
        <%= link_to 'refresh', '#', :feed_id => feed.id, :last_modified => feed.updated_at.httpdate %>
      </span>
    </div>
  </div>

  <div class="posts">
    <% feed.posts.each do |post| %>
      <div><%= link_to post.title, post.url %></div>
    <% end %>
  </div>
</div>
